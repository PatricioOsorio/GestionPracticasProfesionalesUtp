@model GestionPracticasProfesionalesUtp.Models.Users;
@using Microsoft.AspNetCore.Identity
@inject RoleManager<IdentityRole> roleManager
@inject GestionPracticasProfesionalesUtp.Data.ApplicationDbContext context

@{
  ViewData["Title"] = "Editar Usuario";
}



<div class="bg-white rounded mt-4 p-5 shadow-lg">
  <h1 class="text-center fw-bold text-body-emphasis display-5 mb-3">Editar usuario</h1>

  <form asp-action="UpdateUser">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row g-3 mb-3">
      <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>

      <div class="col-md-6">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
      </div>

      <div class="col-md-6">
        <label class="form-label">Rol</label>
        <select class="form-select" aria-label="Default select example" name="rol" required>
          <option selected disabled hidden>---</option>
          @foreach (var rol in roleManager.Roles)
          {
            if (rol.Name == ViewBag.UserRol)
            {
              <option selected value="@rol.Name">@rol.NormalizedName</option>
            }
            else
            {
              <option value="@rol.Name">@rol.NormalizedName</option>
            }
          }
        </select>
      </div>

      <div class="col-md-6">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
      </div>

      <div class="col-md-6">
        <label asp-for="ApellidoPaterno" class="form-label"></label>
        <input asp-for="ApellidoPaterno" class="form-control" required />
        <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
      </div>

      <div class="col-md-6">
        <label asp-for="ApellidoMaterno" class="form-label"></label>
        <input asp-for="ApellidoMaterno" class="form-control" required />
        <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
      </div>
    </div>

    <div class="d-flex gap-2">
      <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Actualizar</button>
      <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-arrow-left me-1"></i>Regresar</a>
    </div>
  </form>
</div>

@model Microsoft.AspNetCore.Identity.IdentityRole
@{
  ViewData["Title"] = "Crear rol";
}

<div class="bg-white rounded mt-4 p-5 shadow-lg">
  <h1 class="text-center fw-bold text-body-emphasis display-5 mb-3">@ViewData["Title"]</h1>

  <form asp-action="CreateRole">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3 mb-3">
      <div class="col-md-6">
        <label asp-for="Name" class="control-label">Nombre del Rol</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
    </div>

    <div class="d-flex gap-2">
      <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Crear</button>
      <a class="btn btn-outline-secondary" asp-action="ReadRoles"><i class="fas fa-arrow-left me-1"></i>Regresar</a>
    </div>
  </form>
</div>
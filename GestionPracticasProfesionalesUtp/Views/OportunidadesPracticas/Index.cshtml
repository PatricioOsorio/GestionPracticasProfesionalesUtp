@model IEnumerable<GestionPracticasProfesionalesUtp.Models.OportunidadesPracticas>

@{
  ViewData["Title"] = "Oportunindades de practicas";
}

<div class="bg-white rounded mt-4 p-5 shadow-lg">
  <h1 class="text-center fw-bold text-body-emphasis display-5 mb-3">@ViewData["Title"]</h1>

  <a class="btn btn-primary mb-3" asp-action="Create"><i class="fa-solid fa-briefcase me-1"></i>Crear nueva práctica</a>

  <div class="table-responsive">
    <table id="MyTable" class="table table-striped table-hover table-borderless align-middle text-center">
      <thead>
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.Descripcion)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Requisitos)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.FechaInicio)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.FechaFin)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.Organizacion)
          </th>
          <th>
            @Html.DisplayNameFor(model => model.CoordinadorOrganizacion)
          </th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Requisitos)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.Organizacion.NombreOrganizacion)
            </td>
            <td>
              @Html.DisplayFor(modelItem => item.CoordinadorOrganizacion.User.Nombre)
            </td>
            <td class="d-flex justify-content-center">
              <a asp-action="Details" asp-route-id="@item.OportunidadPracticaId" class="btn btn-info mx-1"><i class="fa-solid fa-circle-info me-1"></i>Detalles</a>
              <a asp-action="Edit" asp-route-id="@item.OportunidadPracticaId" class="btn btn-warning mx-1"><i class="fas fa-edit me-1"></i>Editar</a>
              <a asp-action="Delete" asp-route-id="@item.OportunidadPracticaId" class="btn btn-danger mx-1"><i class="fas fa-minus-circle me-1"></i>Eliminar</a>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>